<?xml version="1.0" encoding="utf-8"?>
<config>
    <general>
        <!-- Adresse de connexion au serveur, sans le port (si locale, certains services de visuweb ne fonctionneront qu'en local) -->
        <host>127.0.0.1</host>
        <!-- 1 si logs PHP verbose -->
        <verbose>1</verbose>
        <!-- Url du service par défaut lors d'une connexion -->
        <durl>http://www.minipavi.fr/minipavitest/</durl>
        <!-- Nombre de connectés simultanés maximum -->
        <maxc>20</maxc>
        <!-- Période maximum d'inactivité avant deconnexion (secondes) -->
        <timeout>600</timeout>
        <!-- Max historique clients -->
        <maxhisto>40</maxhisto>
        <!-- Port pour connexion websocket non sécurisée -->
        <wsport>8182</wsport>
        <!-- Port pour accès à VisuWeb (interface web) -->
        <httpport>8080</httpport>
        <!-- Nom utilisateur pour l'accès à VisuWeb -->
        <httpuser>minipavi</httpuser>
        <!-- Mot de passe pour l'accès à VisuWeb -->
        <httppwd>1234</httppwd>
        <!-- Emplacement des logs MiniPavi -->
        <lpath>/logs</lpath>
        <!-- Emplacement des fichiers stats -->
        <spath>/stats</spath>
        <!-- Url d'une page ou est installé un émulateur Minitel pour la visualisation des sessions en direct et enregistrées. Doit pouvoir accepter un paramètre "gw" indiquant l'adresse WEBSOCKET du serveur auquel se connecter et/ou un paramètre "url" indiquant l'adresse HTTP du service à afficher -->
        <viewer>http://www.minipavi.fr/emulminitel/</viewer>
    </general>
    <connecttocmd>
        <!-- Clé d'autorisation pour les commandes de connexion vers l'exterieur (VoIP, Telnet, Websocket, visualisation...) -->
        <key>Key1234</key>
        <!-- Url du service EXTcall (pour activer la visualisation des utilisateurs connectés) -->
        <extcallurl>http://www.minipavi.fr/EXTcall/</extcallurl>
        <!-- Clé pour la visualisation des utilisateurs -->
        <visukey>123abc</visukey>
    </connecttocmd>
    <recordings>
        <!-- Emplacement des enregistrements de sessions des utilisateurs -->
        <rpath>/recordings</rpath>
    </recordings>
</config>
